- name: User id checking
  hosts: web
  become: yes
  tasks:
   - name: userid exsitense in server
     ansible.builtin.command: id user
     register: userid
     ignore_errors: True

   - name: the user exists or not
     ansible.builtin.debug: 
      msg: "user expense does not exists"
     when: userid.rc != 0  

   - name: adding the userrrr
     ansible.builtin.debug: 
      msg: "user expense Already  exists {{userid}}"
     when: userid.rc != 1  

   - name: adding the new user
     ansible.builtin.command: useradd expense
     when: userid.rc != 0
